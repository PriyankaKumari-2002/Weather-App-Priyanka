<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242343"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/weatherIcon"
        android:src="@drawable/finding"
        android:layout_marginTop="80dp">

    </ImageView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:orientation="vertical"
        android:layout_above="@id/cityFinder">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temperature"
            android:paddingStart="40dp"
            android:textSize="70sp"
            android:textStyle="bold"
            android:textColor="#ffa384"
            android:text="18*C">

        </TextView>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/weatherCondition"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:text="---------------"
            android:paddingStart="18sp">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cityName"
            android:textStyle="italic"
            android:textSize="40sp"
            android:text="Fetching_____"
            android:paddingStart="45sp"
            android:textColor="#ffffff">

        </TextView>

    </LinearLayout>


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_centerInParent="true"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:layout_alignParentBottom="true"
      android:id="@+id/cityFinder"
      android:background="@drawable/buttondesign"
      android:layout_marginBottom="120dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Search a New City"
          android:textColor="#ffffff"
          android:layout_centerInParent="true"
          android:textSize="20sp" />

  </RelativeLayout>

</RelativeLayout>